# NEVER commit these files containing secrets
.streamlit/secrets.toml
.streamlit/credentials.toml

# Local configuration overrides
.streamlit/config.local.toml
*.local.toml

# Cache and temporary files
cache/
temp/
*.tmp
*.cache

# Backup files
*.bak
*.backup
*~

# OS-specific files
.DS_Store
Thumbs.db
desktop.ini

# IDE files
.idea/
.vscode/
*.swp
*.swo

# Log files
*.log
logs/

# Virtual environment
venv/
env/
.env

# Output files
output/

# Environment-specific configs
config.development.toml
config.production.toml
config.staging.toml

# Keep the templates
!.streamlit/secrets.toml.template
!.streamlit/credentials.toml.template
!.streamlit/config.toml